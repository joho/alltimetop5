; This file is for unifying the coding style for different editors and IDEs.
; More information at http://EditorConfig.org

root = true
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[Rakefile]
indent_size = 2

[*.rake]
indent_size = 2

[Gemfile*]
indent_style = space
indent_size = 2

[config.ru]
indent_style = space
indent_size = 2

[**.rb]
indent_size = 2

[**.yml]
indent_size = 2

[{Makefile}]
indent_style = tab

[*.erb]
indent_size = 4
